pipeline{
    agent any

    stages{

        stage('Packer Image Build'){
          steps{
            dir("automate_windows_host") {
              echo $PATH;
             /* sh "packer validate windows_10_winrm.json"
              sh "packer build windows_10_winrm.json"*/
            }
          }
        }

        stage('Terraform Apply'){
          steps{
            dir("automate_windows_host") {
             /* sh "terraform init"
              sh "terraform apply -auto-approve"*/
            }
          }
        }

    }
}
